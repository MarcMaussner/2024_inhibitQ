&GLOBAL
  PROJECT al_slab_opt
  RUN_TYPE GEO_OPT
  PRINT_LEVEL MEDIUM
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME POTENTIAL
    &QS
      EPS_DEFAULT 1.0E-10
    &END QS
    &MGRID
      CUTOFF 400
      REL_CUTOFF 50
    &END MGRID
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
      &VDW_POTENTIAL
        POTENTIAL_TYPE PAIR_POTENTIAL
        &PAIR_POTENTIAL
          TYPE DFTD3
          PARAMETER_FILE_NAME dftd3.dat
          REFERENCE_FUNCTIONAL PBE
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
    &END XC
    &SCF
      MAX_SCF 300
      EPS_SCF 1.0E-6
      SCF_GUESS ATOMIC
      &MIXING
        METHOD BROYDEN_MIXING
        ALPHA 0.4
        NBROYDEN 8
      &END MIXING
    &END SCF
  &END DFT
  &SUBSYS
    &CELL
      ABC 8.1 8.1 40.0
      ALPHA_BETA_GAMMA 90.0 90.0 90.0
    &END CELL
    &COORD
      SCALED
      Al 0.00000 0.00000 0.10000
      Al 0.50000 0.00000 0.10000
      Al 0.00000 0.50000 0.10000
      Al 0.50000 0.50000 0.10000
      Al 0.25000 0.25000 0.15000
      Al 0.75000 0.25000 0.15000
      Al 0.25000 0.75000 0.15000
      Al 0.75000 0.75000 0.15000
      Al 0.00000 0.00000 0.20000
      Al 0.50000 0.00000 0.20000
      Al 0.00000 0.50000 0.20000
      Al 0.50000 0.50000 0.20000
    &END COORD
    &KIND Al
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q3
    &END KIND
  &END SUBSYS
&END FORCE_EVAL

&MOTION
  &GEO_OPT
    MAX_ITER 200
    OPTIMIZER BFGS
  &END GEO_OPT
  &FIXED_ATOMS
    LIST 1..4  # This will fix the first 4 atoms (bottom layer)
  &END FIXED_ATOMS
&END MOTION
